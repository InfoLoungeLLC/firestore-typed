{
  "name": "@info-lounge/firestore-typed",
  "version": "0.5.4",
  "description": "Type-safe, low-level wrapper for Firebase Firestore with enhanced validation and developer experience",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "format": "prettier --write \"src/**/*.ts\" \"*.{ts,js,mjs}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{ts,js,mjs}\"",
    "test": "npm run typia:generate && vitest run",
    "test:watch": "vitest",
    "test:coverage": "npm run typia:generate && vitest run --coverage",
    "test:emulator": "vitest run --config vitest.emulator.config.ts",
    "test:emulator:watch": "vitest --config vitest.emulator.config.ts",
    "typia:generate": "typia generate --input src/__tests__/__helpers__/typia-validators --output src/__tests__/__helpers__/typia-validators/__generated__",
    "lint": "eslint \"src/**/*.ts\" \"*.{ts,js,mjs}\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"*.{ts,js,mjs}\" --fix",
    "typecheck": "npm run typia:generate && tsc --noEmit",
    "emulators:start": "firebase emulators:start --project demo-firestore-typed"
  },
  "keywords": [
    "firestore",
    "firebase",
    "typescript",
    "typed",
    "type-safe",
    "schema",
    "validation",
    "typia",
    "zod",
    "firestore-schema",
    "runtime-validation",
    "typescript-decorator",
    "firebase-admin"
  ],
  "author": "Info Lounge Corporation",
  "license": "MIT",
  "peerDependencies": {
    "firebase-admin": "^13.5.0",
    "typia": "^9.7.2",
    "zod": "^4.0.17"
  },
  "peerDependenciesMeta": {
    "typia": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "firebase-admin": "^13.4.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.14.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.39.0",
    "typia": "^9.7.1",
    "vitest": "^3.2.4",
    "zod": "^4.0.17"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "README.ja.md",
    "CHANGELOG.md",
    "CHANGELOG.ja.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/InfoLoungeLLC/firestore-typed.git"
  },
  "bugs": {
    "url": "https://github.com/InfoLoungeLLC/firestore-typed/issues"
  },
  "homepage": "https://github.com/InfoLoungeLLC/firestore-typed#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/InfoLoungeLLC"
  }
}
