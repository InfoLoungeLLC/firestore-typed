{
  "name": "@info-lounge/firestore-typed",
  "version": "0.4.2",
  "description": "Type-safe, low-level wrapper for Firebase Firestore with enhanced validation and developer experience",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "firebase",
    "firestore",
    "typescript",
    "type-safety",
    "validation",
    "typia"
  ],
  "author": "Info Lounge Corporation",
  "license": "MIT",
  "peerDependencies": {
    "firebase-admin": "^13.4.0",
    "typia": "^9.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.13.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/InfoLoungeLLC/firestore-typed.git"
  },
  "bugs": {
    "url": "https://github.com/InfoLoungeLLC/firestore-typed/issues"
  },
  "homepage": "https://github.com/InfoLoungeLLC/firestore-typed#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/InfoLoungeLLC"
  }
}
